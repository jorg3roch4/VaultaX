{
  "VaultaX": {
    "Enabled": true,
    "Address": "http://localhost:8200",
    "MountPoint": "secret",
    "KvVersion": 2,
    "BasePath": "test",
    "Authentication": {
      "Method": "Token",
      "Token": "static:test-token"
    },
    "Mappings": [
      {
        "SecretPath": "database",
        "Bindings": {
          "connectionString": "ConnectionStrings:DefaultConnection",
          "password": "DatabaseSettings:Password"
        }
      },
      {
        "SecretPath": "rabbitmq",
        "Bindings": {
          "host": "RabbitMQ:Host",
          "username": "RabbitMQ:Username",
          "password": "RabbitMQ:Password"
        }
      }
    ],
    "Reload": {
      "Enabled": true,
      "IntervalSeconds": 60
    },
    "TokenRenewal": {
      "Enabled": true,
      "CheckIntervalSeconds": 30,
      "ThresholdPercent": 75,
      "MaxConsecutiveFailures": 3
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=Test;Trusted_Connection=True;"
  },
  "DatabaseSettings": {
    "Password": "default-password"
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Username": "guest",
    "Password": "guest"
  }
}
