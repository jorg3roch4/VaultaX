{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "VaultaX": "Information"
    }
  },
  "VaultaX": {
    "Enabled": false,
    "Address": "http://localhost:8200",
    "MountPoint": "secret",
    "KvVersion": 2,
    "BasePath": "",
    "Authentication": {
      "Method": "Token",
      "Token": "env:VAULT_TOKEN"
    },
    "TokenRenewal": {
      "Enabled": true,
      "CheckIntervalSeconds": 60,
      "ThresholdPercent": 75,
      "MaxConsecutiveFailures": 3
    }
  }
}
