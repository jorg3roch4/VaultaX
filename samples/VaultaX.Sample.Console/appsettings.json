{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "VaultaX": "Information"
    }
  },
  // ============================================================================
  // VaultaX Configuration
  // ============================================================================
  // Set Enabled to true and configure your Vault server to run the sample.
  // All sensitive values support three formats:
  // - "VAULT_TOKEN"         -> Reads from environment variable
  // - "env:VAULT_TOKEN"     -> Explicit env var prefix
  // - "static:my-value"     -> Static value (for development only!)
  // ============================================================================
  "VaultaX": {
    "Enabled": false,
    "Address": "http://localhost:8200",
    "MountPoint": "secret",
    "KvVersion": 2,
    "BasePath": "",

    // Authentication - choose one method and configure it
    "Authentication": {
      "Method": "Token",
      "Token": "VAULT_TOKEN"

      // AppRole (recommended for production):
      // "Method": "AppRole",
      // "RoleId": "my-role-id",
      // "SecretId": "VAULT_SECRET_ID"

      // Kubernetes:
      // "Method": "Kubernetes",
      // "Role": "my-k8s-role"

      // LDAP:
      // "Method": "LDAP",
      // "Username": "myuser",
      // "Password": "VAULT_LDAP_PASSWORD"

      // UserPass:
      // "Method": "UserPass",
      // "Username": "myuser",
      // "Password": "VAULT_USERPASS_PASSWORD"

      // JWT:
      // "Method": "JWT",
      // "Role": "my-jwt-role",
      // "Token": "JWT_TOKEN"

      // AWS:
      // "Method": "AWS",
      // "Role": "my-aws-role",
      // "Region": "us-east-1",
      // "AuthType": "iam"

      // Azure:
      // "Method": "Azure",
      // "Role": "my-azure-role",
      // "Resource": "https://management.azure.com/"

      // GitHub:
      // "Method": "GitHub",
      // "Token": "GITHUB_TOKEN"

      // Certificate:
      // "Method": "Certificate",
      // "CertificatePath": "/path/to/cert.pfx",
      // "CertificatePassword": "CERT_PASSWORD",
      // "Role": "my-cert-role"

      // RADIUS:
      // "Method": "RADIUS",
      // "Username": "myuser",
      // "Password": "RADIUS_PASSWORD"

      // Custom:
      // "Method": "Custom",
      // "CustomPath": "auth/custom/login",
      // "CustomValue": "CUSTOM_AUTH_TOKEN"
    },
    "TokenRenewal": {
      "Enabled": true,
      "CheckIntervalSeconds": 60,
      "ThresholdPercent": 75,
      "MaxConsecutiveFailures": 3
    }
  }
}
